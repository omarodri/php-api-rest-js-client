{
    "version": 2,
    "routes": [{
            "src": "/",
            "dest": "index.html"
        },
        {
            "src": "/(?<type>[^/]+)/(?<id>[^/]+)",
            "dest": "server-apiRest.php?resourceType=$type&id=$id"
        },
        {
            "src": "/(?<type>[^/]+)(/)",
            "dest": "server-apiRest.php?resourceType=$type"
        },
        {
            "src": "/(.*)",
            "dest": "server-apiRest.php",
            "status": 404
        }
    ],
    "name": "omar-api-rest",
    "builds": [{
            "src": "*.php",
            "use": "@now/php"
        },
        {
            "src": "*.html",
            "use": "@now/static"
        }
    ]
}